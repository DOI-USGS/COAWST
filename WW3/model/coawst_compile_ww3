#    fi
#    echo -e "      Generating $code in $main_dir/bin " | tee ${main_dir}/tmp/${ldir}_setup.out
#    echo -e "         Compiling ... " | tee ${main_dir}/tmp/${ldir}_setup.out
#    echo -e "         FORT is $FORT"
#    if `$FORT $code.f > fort.out 2> fort.err`
#    then
#      rm -f $main_dir/bin/$code
